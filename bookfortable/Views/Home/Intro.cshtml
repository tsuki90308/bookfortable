<style>
    .big-title {
        font-size: 36px;
        font-weight: bold;
        text-align: center;
    }

    .subtitle {
        font-size: 18px;
        text-align: center;
        color: #666;
        margin-bottom: 30px;
    }

    .card {
        margin-bottom: 30px;
    }

    .subscribe-btn {
        position: fixed;
        bottom: 20%;
        left: 50%;
        transform: translateX(-50%);
        background-color: #ff4d4d;
        border: none;
        color: white;
        font-size: 18px;
        font-weight: bold;
        padding: 15px 30px;
        border-radius: 30px;
        cursor: pointer;
        z-index: 9999;
    }


        .subscribe-btn:hover {
            background-color: #cc0000;
        }

    .accordion-item {
        border: 1px solid #000 !important; /* 设置边框为黑色，并添加 !important */
        border-radius: 0 !important; /* 移除边框圆角，并添加 !important */
        margin-bottom: 20px !important;
    }

    .accordion-button {
        background-color: #fff !important;
        color: #000 !important;
        border: none !important;
        text-align: left !important;
        padding: 15px 20px !important;
        font-weight: bold !important;
        cursor: pointer !important;
        font-size: 18px !important;
    }

