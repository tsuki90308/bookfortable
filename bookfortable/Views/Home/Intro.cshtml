            margin-bottom: 0 !important;
        }

    .card-title {
        font-weight: bold;
        text-align: center;
    }

    .card-text {
        text-align: center;
    }

    .list-unstyled{

        color:gray;
        padding: 20px 20px 10px 20px;
        
    }
