<script>
    // 監聽滾動事件
    window.addEventListener('scroll', function () {
        var button = document.querySelector('.subscribe-btn'); // 獲取按鈕元素
        var windowHeight = window.innerHeight; // 窗口高度
        var documentHeight = document.documentElement.scrollHeight; // 整個文檔的高度
        var scrollPosition = window.scrollY || window.pageYOffset || document.documentElement.scrollTop; // 垂直滾動的位置

        // 如果滾動的位置加上窗口高度等於整個文檔的高度，則隱藏按鈕
        if (scrollPosition + windowHeight >= documentHeight) {
            button.style.display = 'none';
        } else {
            button.style.display = 'block'; // 否則顯示按鈕
        }
    });
</script>


