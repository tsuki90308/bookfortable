@model bookfortable.Models.Event
@{
    Layout = "_FrontLayout";
}

<style>
    /* 增強取消報名成功頁面的樣式 */
    body {
        background-color: #f8f9fa; /* 背景顏色 */
    }

    .card {
        background-color: #fff; /* 卡片背景色 */
        border-radius: 15px; /* 卡片圓角 */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* 卡片陰影 */
    }

    .card-title {
        color: #007bff; /* 標題顏色 */
        font-size: 24px; /* 標題字體大小 */
        font-weight: bold; /* 標題字體加粗 */
    }

    .card-body {
        padding:3px; /* 卡片內邊距 */
    }

    .btn-primary {
        background-color: #007bff; /* 主要按鈕背景色 */
        border-color: #007bff; /* 主要按鈕邊框色 */
        border-radius: 20px; /* 按鈕圓角 */
        padding: 5px 20px; /* 按鈕內邊距 */
        font-size: 18px; /* 按鈕字體大小 */
        font-weight: bold; /* 按鈕字體加粗 */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* 滑鼠懸停時的背景色 */
            border-color: #0056b3; /* 滑鼠懸停時的邊框色 */
        }
 </style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>取消報名成功</title>
    <!-- 如果有需要，可以在這裡添加其他樣式或腳本 -->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card mt-5">
                    <div class="card-body">
                        <h3 class="text-center">取消報名成功</h3>
                        <p class="text-center">您已成功取消報名該活動。</p>
                        <!-- 如果有需要，可以在這裡添加其他顯示信息或按鈕 -->
                        <div class="text-center">
                            <a href="@Url.Action("List", "Eventfront")" class="btn btn-primary">返回首頁</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

