    <!-- 其他表單元素 -->
    <button type="button" class="btn btn-danger" onclick="cancelSignUp()"> 取消報名 </button>
</div>

<script>

    function cancelSignUp() {
        // 獲取已選擇的活動相關資訊
        var eventName = $('#selectedEventNameInput').val();

        // 進行取消報名的操作
        // 發送後端請求進行實際的取消報名動作
        $.ajax({
            type: 'POST',
            url: '/SignUpController/CancelSignUp', // 請替換成實際的控制器和動作
            data: {
                S_EventName: eventName
            },
            success: function (response) {
                if (response.success) {
                    // 取消報名成功，修改網頁顯示
                    alert('取消報名成功！');
                    // 或者其他你希望顯示的取消報名成功的操作
                } else {
                    // 取消報名失敗的處理
                    alert('取消報名失敗！');
                }
            },
            error: function () {
                // 請求失敗的處理
                alert('請求失敗！');
            }
        });
    }

</script>



