@using Bookfortable.Models.CLoginDictionary
@{
    ViewData["Title"] = "Login";
    Layout = "_FrontLayout";
}

<div class="bg-primary">
    <div class="container w-50 p-5">
        <div class="p-5 flex-column row justify-content-center align-items-center border border-10 rounded-lg" style="background-color: rgba(245, 245, 245, 0.7)" >
            <h2>會員登入</h2>

            @*哦 可以欸*@
            @* @if(string.IsNullOrEmpty(Context.Session.GetString(CLoginDictionary.SK_LOGINGED_USER))){

            } *@

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    <h5>請輸入帳號與密碼</h5>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        帳號
                        <div>
                            @Html.TextBox("textAccount", "", new { @class = "form-control" , @placeholder = "帳號或電子郵件地址"} )
                        </div>
                    </div>
                    <div class="form-group">
                        密碼
                        <div>
                            @Html.TextBox("textPassword", "", new { @class = "form-control w-100", @type = "password", @placeholder = "密碼" } )
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-0 vol-md-10 row justify-content-center">
                            <input type="submit" value="登入" class="btn btn-primary btn-block" />
                            @* @Html.ActionLink("取消", "List", new { @class = "btn btn-danger" }) *@
                            <a class="btn btn-secondary mt-3" asp-action="Index" asp-controller="Home">取消</a>
                        </div>
                        <hr />
                        <div class="col-md-offset-0 vol-md-10 row">
                            <label>還沒有會員？</label>
                            <a class="" asp-action="addMember" asp-controller="LogIn">註冊</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
