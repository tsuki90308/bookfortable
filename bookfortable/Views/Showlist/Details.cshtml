@model IEnumerable<bookfortable.ViewModels.BlogViewModel>

@{
    Layout = "_FrontLayout";
    ViewData["Title"] = "Details";
}


@foreach (var item in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div> <!-- 左邊縮 15% -->
            <div class="col-md-10">
                <h3>@item.Blog.BlogTitle</h3> <!-- BlogTitle 作為標題 -->
                <img src="@item.BlogImage?.ImagePath" alt="@item.Blog.BlogTitle" class="img-fluid">
                @if (!string.IsNullOrEmpty(item.BlogImage?.ImageTitle))
                {
                    <h5>@item.BlogImage.ImageTitle</h5>
                }
            </div>
            <div class="col-md-1"></div> <!-- 右邊縮 15% -->
        </div>
        <div class="row">
            <div class="col-md-3"></div> <!-- 左邊縮 30% -->
            <div class="col-md-6">
                <h4>Hashtag: @item.Blog.Hashtag</h4>
            </div>
            <div class="col-md-3"></div> <!-- 右邊縮 30% -->
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <p>@item.Blog.BlogDescription</p>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.First().Blog.BlogId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
